<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    android:layout_gravity="center">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical">


        <TextView
            android:id="@+id/dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome link"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_marginTop="90dp"/>

        <TextView
            android:id="@+id/dialog_descrizione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/dialog_btn_call"
            android:padding="20dp"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_send_black_24dp"
            android:background="@android:color/white"
            android:layout_marginTop="10dp"
            android:text="Invia"
            android:textColor="@android:color/black"
            android:gravity="start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textColor="@android:color/black"
            android:id="@+id/dialog_btn_message"
            android:drawablePadding="20dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/dialog_message_black_24dp"
            android:text="Aggiungi dettagli"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:gravity="start" />


    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_immagine"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/head"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_alignParentTop="true"/>



</RelativeLayout>